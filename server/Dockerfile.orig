# Multi-platform, slim Python
FROM python:3.11-slim

# System deps for performance & HTML parsing + document parsing + OCR
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential curl ca-certificates libxml2 libxslt1.1 \
    poppler-utils tesseract-ocr tesseract-ocr-eng ocrmypdf libmagic1 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY app ./app

# Create non-root user
RUN useradd -m appuser && chown -R appuser:appuser /app
USER appuser

EXPOSE 8000
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
